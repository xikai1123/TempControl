<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/frame_shape"
    android:layout_margin="2dp"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_left_margin"
    android:paddingRight="@dimen/activity_right_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.shangchi.TempControl.MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dip"
        android:orientation="horizontal" >

	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:background="@drawable/table_shape"
	        android:layout_margin="5dp"
	        android:layout_weight="1"
	        android:orientation="vertical" >
		   <TextView
		        android:id="@+id/tempRoom1"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_gravity="center"
		        android:gravity="center"
		        android:text="1号温室" />
		   <TextView
		        android:id="@+id/temp1"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="温度：22.4°C" />
		   <TextView
		        android:id="@+id/hum1"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="湿度：82%" />
		   <TextView
		        android:id="@+id/sun1"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="光照：358Lux" />
		   <TextView
		        android:id="@+id/CO21"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="CO2：340ppm" />
		   <TextView
		        android:id="@+id/state1"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="状态：正常" />
	    </LinearLayout>
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:background="@drawable/table_shape"
	        android:layout_margin="5dp"
	        android:layout_weight="1"
	        android:orientation="vertical" >
		   <TextView
		        android:id="@+id/tempRoom2"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_gravity="center"
		        android:gravity="center"
		        android:text="2号温室" />
		   <TextView
		        android:id="@+id/temp2"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="温度：23.1°C" />
		   <TextView
		        android:id="@+id/hum2"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="湿度：80%" />
		   <TextView
		        android:id="@+id/sun2"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="光照：369Lux" />
		   <TextView
		        android:id="@+id/CO22"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="CO2：321ppm" />
		   <TextView
		        android:id="@+id/state2"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="状态：正常" />
	    </LinearLayout>
	</LinearLayout>
	<LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:background="@drawable/table_shape"
       android:layout_marginLeft="5dp"
       android:layout_marginRight="5dp"
       android:layout_marginTop="30dip"
       android:orientation="vertical" >
	  	<TextView
	        android:id="@+id/devstate"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center"
	        android:textSize="60px"
	        android:gravity="center"
	        android:text="设备工作状态" />
		<LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal" >
		    <ImageButton
			    android:id="@+id/switch1"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_weight="1"
			    android:scaleType="centerCrop"
			    android:background="#00000000"
			    android:src="@drawable/jiare_1" />
		    <ImageButton
			    android:id="@+id/switch2"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_weight="1"
			    android:scaleType="centerCrop"
			    android:background="#00000000"
			    android:src="@drawable/tongfeng_1" />
		    <ImageButton
			    android:id="@+id/switch3"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_weight="1"
			    android:scaleType="centerCrop"
			    android:background="#00000000"
			    android:src="@drawable/zhileng_1" />
		    <ImageButton
			    android:id="@+id/switch4"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_weight="1" 
			    android:scaleType="centerCrop"
			    android:background="#00000000"
			    android:src="@drawable/buguang_1"/>
		</LinearLayout>
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal" >
		    <TextView
			    android:id="@+id/onoff1"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_weight="1"
			    android:gravity="center"
			    android:text="关闭" />
		    <TextView
			    android:id="@+id/onoff2"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_weight="1"
			    android:gravity="center"
			    android:text="关闭" />
		    <TextView
			    android:id="@+id/onoff3"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_weight="1"
			    android:gravity="center"
			    android:text="关闭" />
		     <TextView
			    android:id="@+id/onoff4"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_weight="1"
			    android:gravity="center"
			    android:text="关闭" />
		</LinearLayout>
	</LinearLayout>
    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="30dip"
        android:textSize="60px"
        android:text="时间" />
    <Button
	    android:id="@+id/start"
	    android:layout_marginTop="30dip"
	    android:layout_marginLeft="30dip"
	    android:layout_marginRight="30dip"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center"
	    android:background="@drawable/button_selector02"
	    android:text="获取当前数据" />
</LinearLayout>
